<%- model_class = Series -%>
<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <h3>Latest <%=t '.title', :default => @series.name %> News</h3>
    </div>

    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h4 class="media-heading"><a href="<%= @feed.title %>" title="<%= articles[:title] %>">@feed.title</a></h4>
          <p><%= articles[:description] %></p>
          <span class="label label-default"><%= articles[:source] %></span>
        </div>
      </div>
    </div>  
    <% end %>
  </div>
</div>
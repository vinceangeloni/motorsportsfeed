<%= form_for @series, :html => { :class => "form-horizontal series" } do |f| %>

  <% if @series.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@series.errors.count, "error") %> prohibited this series from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @series.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :logo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :logo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:logo) %>
  </div>
  <div class="form-group">
    <%= f.label :feeds_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :feeds_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:feeds_id) %>
  </div>
  <div class="form-group">
    <%= f.label :calendar_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :calendar_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:calendar_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                series_index_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
